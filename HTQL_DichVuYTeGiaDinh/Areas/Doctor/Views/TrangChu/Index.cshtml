@model HTQL_DichVuYTeGiaDinh.Models.BacSi
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thông Tin Bác Sĩ";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Hình ảnh hiển thị ở khung tròn -->
            <div class="text-center mb-4">
                <img src="@Url.Content("~/images/bacsi/" + Model.HinhAnh)"
                     alt="Hình ảnh bác sĩ"
                     class="rounded-circle shadow"
                     style="width: 150px; height: 150px; object-fit: cover;" />
            </div>
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            }

            <!-- Thông tin bác sĩ -->
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Thông Tin Bác Sĩ</h4>
                </div>
                <div class="card-body">
                    <p><strong>Họ tên:</strong> @Model.HoTen</p>
                    <p><strong>Ngày sinh:</strong> @Model.NgaySinh.ToString("dd/MM/yyyy")</p>
                    <p><strong>Số CCCD:</strong> @Model.SoCccd</p>
                    <p><strong>Giới tính:</strong> @(Model.GioiTinh == 0 ? "Nữ" : "Nam")</p>
                    <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
                    <p><strong>Số điện thoại:</strong> @Model.SoDienThoai</p>
                    <p><strong>Email:</strong> @Model.DiaChiEmail</p>
                    <p><strong>Chuyên khoa:</strong> @Model.MaChuyenKhoaNavigation?.TenChuyenKhoa</p> <!-- Thêm dòng này -->
                </div>
                <div class="card-footer text-center">
                    <a asp-area="Doctor" asp-controller="TrangChu" asp-action="Edit"
                       class="btn btn-primary">
                        Chỉnh sửa thông tin
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

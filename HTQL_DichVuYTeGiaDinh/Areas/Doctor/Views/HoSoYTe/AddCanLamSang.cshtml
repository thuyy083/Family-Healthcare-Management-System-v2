@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model HTQL_DichVuYTeGiaDinh.ViewModels.AddCanLamSangViewModel

@{
    ViewData["Title"] = "Thêm Kết Quả Cận Lâm Sàng";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddCanLamSang" asp-controller="HoSoYTe" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="HoSoId" />

    <div class="form-group">
        <label asp-for="SelectedPhuongPhap" class="control-label">Phương Pháp Cận Lâm Sàng</label>
        <select asp-for="SelectedPhuongPhap" class="form-control" asp-items="@(new SelectList(Model.PhuongPhapCanLamSangs, "MaPhuongPhap", "TenPhuongPhap"))">
            <option value="">-- Chọn phương pháp --</option>
        </select>
        <span asp-validation-for="SelectedPhuongPhap" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HinhAnhKetQua" class="control-label">Hình Ảnh Kết Quả</label>
        <input asp-for="HinhAnhKetQua" type="file" class="form-control" />
        <span asp-validation-for="HinhAnhKetQua" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save"></i> Lưu
        </button>
        

    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model HTQL_DichVuYTeGiaDinh.Models.KhachHang
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết bệnh nhân";
}

<h2>Chi tiết bệnh nhân</h2>

<div>
    <h4>Bệnh nhân</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class="col-sm-2">
            Ngày sinh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class="col-sm-2">
            Giới tính
        </dt>
        <dd class="col-sm-10">
            @(Model.GioiTinh == 1 ? "Nam" : "Nữ")
        </dd>
        <dt class="col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoDienThoai)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaChiEmail)
        </dd>
        <dt class="col-sm-2">
            Mối quan hệ với chủ hộ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoiQuanHeVoiChuHo)
        </dd>
        <dt class="col-sm-2">
            Người liên hệ khẩn cấp
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenNguoiLienHeKhanCap)
        </dd>
        <dt class="col-sm-2">
            SĐT người liên hệ khẩn cấp
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SdtNguoiLienHeKhanCap)
        </dd>
    </dl>
</div>

<div>
    <a asp-area="Doctor" asp-controller="HoSoYTe" asp-action="Create" asp-route-maTk="@Model.MaTk" class="btn btn-primary">Thêm hồ sơ y tế</a>
    <a asp-area="Doctor" asp-controller="HoSoYTe" asp-action="Index" asp-route-maTk="@Model.MaTk" class="btn btn-secondary">Xem tất cả hồ sơ y tế</a>
    <a asp-area="Doctor" asp-controller="BenhNhan" asp-action="Index" class="btn btn-info">Trở lại danh sách bệnh nhân</a>
</div>

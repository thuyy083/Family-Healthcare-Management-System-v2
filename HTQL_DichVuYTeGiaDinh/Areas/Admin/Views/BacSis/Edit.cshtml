@model HTQL_DichVuYTeGiaDinh.ViewModels.CreateBacSiViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chỉnh sửa thông tin bác sĩ";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">

    <div class="form-group">
        <label asp-for="HoTen"></label>
        <input asp-for="HoTen" class="form-control" />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgaySinh"></label>
        <input asp-for="NgaySinh" class="form-control" type="date" />
        <span asp-validation-for="NgaySinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoCccd"></label>
        <input asp-for="SoCccd" class="form-control" />
        <span asp-validation-for="SoCccd" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GioiTinh"></label>
        <select asp-for="GioiTinh" class="form-control">
            <option value="0">Nam</option>
            <option value="1">Nữ</option>
        </select>
        <span asp-validation-for="GioiTinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiaChi"></label>
        <input asp-for="DiaChi" class="form-control" />
        <span asp-validation-for="DiaChi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoDienThoai"></label>
        <input asp-for="SoDienThoai" class="form-control" />
        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiaChiEmail"></label>
        <input asp-for="DiaChiEmail" class="form-control" type="email" />
        <span asp-validation-for="DiaChiEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaChuyenKhoa"></label>
        <select asp-for="MaChuyenKhoa" class="form-control" asp-items="@(new SelectList(Model.ChuyenKhoas, "MaChuyenKhoa", "TenChuyenKhoa"))">
            <option value="">-- Chọn chuyên khoa --</option>
        </select>
        <span asp-validation-for="MaChuyenKhoa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TrinhDoHocVan"></label>
        <input asp-for="TrinhDoHocVan" class="form-control" />
        <span asp-validation-for="TrinhDoHocVan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Hình ảnh hiện tại:</label>
        <br />
        <img src="~/images/@(Model.HinhAnh)" alt="Hình ảnh hiện tại" style="max-width: 200px;" />
        <br />
        <small>(Hình ảnh hiện tại sẽ được giữ nguyên)</small>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model HTQL_DichVuYTeGiaDinh.ViewModels.KhachHangViewModel

<h2>Thêm thành viên hộ gia đình</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="MaHgd" />

    <div class="form-group">
        <label asp-for="HoTen">Họ tên</label>
        <input asp-for="HoTen" class="form-control" />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgaySinh">Ngày sinh</label>
        <input asp-for="NgaySinh" class="form-control" type="date" />
        <span asp-validation-for="NgaySinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoCccd">Số CCCD</label>
        <input asp-for="SoCccd" class="form-control" />
        <span asp-validation-for="SoCccd" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GioiTinh">Giới tính</label>
        <select asp-for="GioiTinh" class="form-control">
            <option value="0">Nữ</option>
            <option value="1">Nam</option>
        </select>
        <span asp-validation-for="GioiTinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiaChi">Địa chỉ</label>
        <input asp-for="DiaChi" class="form-control" />
        <span asp-validation-for="DiaChi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoDienThoai">Số điện thoại</label>
        <input asp-for="SoDienThoai" class="form-control" />
        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MatKhau">Mật khẩu</label>
        <input asp-for="MatKhau" class="form-control" type="password" />
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiaChiEmail">Email</label>
        <input asp-for="DiaChiEmail" class="form-control" />
        <span asp-validation-for="DiaChiEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HinhAnhFile">Hình ảnh</label>
        <input asp-for="HinhAnhFile" class="form-control-file" type="file" />
        <span asp-validation-for="HinhAnhFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MoiQuanHeVoiChuHo">Mối quan hệ với chủ hộ</label>
        <input asp-for="MoiQuanHeVoiChuHo" class="form-control" />
        <span asp-validation-for="MoiQuanHeVoiChuHo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TenNguoiLienHeKhanCap">Tên người liên hệ khẩn cấp</label>
        <input asp-for="TenNguoiLienHeKhanCap" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SdtNguoiLienHeKhanCap">SĐT người liên hệ khẩn cấp</label>
        <input asp-for="SdtNguoiLienHeKhanCap" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Thêm thành viên</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

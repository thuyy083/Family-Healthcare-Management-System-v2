@model HTQL_DichVuYTeGiaDinh.Models.HoGiaDinh
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm hộ gia đình";
}

<div class="col-9">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Thêm hộ gia đình</h4>
        </div>
        <div class="card-content">
            <div class="card-body">
                <form asp-action="Create" asp-controller="HoGiaDinhs" asp-area="Admin" method="post">
                    <div class="form-body">
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-md-4">

                                <label asp-for="SodienthoaiHgd">Số điện thoại</label>
                            </div>
                            <div class="col-md-8">

                                <input asp-for="SodienthoaiHgd" class="form-control" placeholder="Số điện thoại" />
                                <span asp-validation-for="SodienthoaiHgd" class="text-danger"></span>
                            </div>
                            <p>

                            </p>
                            <div class="col-md-4">

                                <label asp-for="ChuHo">Tên chủ hộ</label>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="ChuHo" class="form-control" placeholder="Tên chủ hộ"/>
                                <span asp-validation-for="ChuHo" class="text-danger"></span>
                            </div>
                            <p>

                            </p>
                            <div class="col-md-4">
                                <label asp-for="DiaChiHgd">Địa chỉ</label>
                            </div>
                            <div class="col-md-8">

                                <textarea asp-for="DiaChiHgd" class="form-control" placeholder="Địa chỉ"></textarea>
                                <span asp-validation-for="DiaChiHgd" class="text-danger"></span>
                            </div>
                            <p>

                            </p>
                            <div class="col-12 d-flex justify-content-end">
                                <input type="submit" value="Thêm" class="btn btn-primary me-1 mb-1" />
                                <button type="reset" class="btn btn-light-secondary me-1 mb-1">Nhập lại</button>

                            </div>
                        </div>
                    </div>
                </form>
                <div>
                    <a asp-area="Admin" asp-controller="HoGiaDinhs" asp-action="Index">Quay lại</a>
                </div>
            </div>
        </div>


    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

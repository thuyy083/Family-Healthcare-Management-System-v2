@model HTQL_DichVuYTeGiaDinh.Models.DichVuYTe
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm dịch vụ";
}

<div class="col-9">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Thêm dịch vụ y tế</h4>
        </div>
        <div class="card-content">
            <div class="card-body">
                <form asp-action="Create" asp-controller="DichVuYTes" asp-area="Admin" method="post">
                    <div class="form-body">
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-md-4">

                                    <label asp-for="TenDichVu">Tên dịch vụ</label>
                                </div>
                                <div class="col-md-8">

                                    <input asp-for="TenDichVu" class="form-control" placeholder="Tên dịch vụ"/>
                                    <span asp-validation-for="TenDichVu" class="text-danger"></span>
                                </div>
                                <p>

                                </p>
                                <div class="col-md-4">

                                    <label asp-for="MoTa">Mô tả</label>
                                </div>
                            <div class="col-md-8">
                                <textarea asp-for="MoTa" class="form-control" placeholder="Mô tả"></textarea>
                                <span asp-validation-for="MoTa" class="text-danger"></span>
                            </div>
                            <p>

                            </p>
                            <div class="col-md-4">
                                <label asp-for="DonViTinh">Đơn vị tính</label>
                            </div>
                            <div class="col-md-8">

                                <input asp-for="DonViTinh" class="form-control" placeholder="Đơn vị tính"/>
                                <span asp-validation-for="DonViTinh" class="text-danger"></span>
                            </div>
                            <p>

                            </p>
                            <div class="col-12 d-flex justify-content-end">
                                <input type="submit" value="Thêm" class="btn btn-primary me-1 mb-1" />
                                <button type="reset" class="btn btn-light-secondary me-1 mb-1">Nhập lại</button>

                            </div>
                        </div>
                    </div>
                </form>
                <div>
                    <a asp-area="Admin" asp-controller="DichVuYTes" asp-action="Index">Quay lại</a>
                </div>
            </div>
        </div>


    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model HTQL_DichVuYTeGiaDinh.Models.DonGiaDichVu
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm Đơn Giá";
}

<h1>Thêm Đơn Giá</h1>

<h4>Đơn Giá Dịch Vụ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDonGia" method="post">
            <div class="form-group">
                <label asp-for="MaDichVu" class="control-label">Mã dịch vụ</label>
                <input asp-for="MaDichVu" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="DonGiaDv" class="control-label">Đơn giá</label>
                <input asp-for="DonGiaDv" type="number" class="form-control" />
                <span asp-validation-for="DonGiaDv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiDiem" class="control-label">Thời điểm</label>
                <input asp-for="ThoiDiem" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model HTQL_DichVuYTeGiaDinh.Models.PhuongPhapCanLamSang
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Phương Pháp Cận Lâm Sàng";
}

<h2>Chỉnh sửa Phương Pháp Cận Lâm Sàng</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaPhuongPhap" />

    <div class="form-group">
        <label asp-for="TenPhuongPhap" class="control-label">Tên phương pháp</label>
        <input asp-for="TenPhuongPhap" class="form-control" />
        <span asp-validation-for="TenPhuongPhap" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="YeuCauDacBiet" class="control-label">Yêu cầu đặc biệt</label>
        <input asp-for="YeuCauDacBiet" class="form-control" />
        <span asp-validation-for="YeuCauDacBiet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ChiPhi" class="control-label">Chi phí</label>
        <input asp-for="ChiPhi" class="form-control" />
        <span asp-validation-for="ChiPhi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GhiChu" class="control-label">Ghi chú</label>
        <textarea asp-for="GhiChu" class="form-control"></textarea>
        <span asp-validation-for="GhiChu" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Details" asp-route-id="@Model.MaPhuongPhap" class="btn btn-secondary">Hủy bỏ</a>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

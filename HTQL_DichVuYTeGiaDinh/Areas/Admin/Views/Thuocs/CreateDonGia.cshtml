@model HTQL_DichVuYTeGiaDinh.Models.DonGiaThuoc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm Đơn Giá";
}

<h1>Thêm Đơn Giá</h1>

<h4>Đơn Giá Thuốc</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDonGia" method="post">
            <div class="form-group">
                <label asp-for="MaThuoc" class="control-label">Mã thuốc</label>
                <input asp-for="MaThuoc" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="DonGiaThuoc1" class="control-label">Đơn giá thuốc</label>
                <input asp-for="DonGiaThuoc1" type="number" class="form-control" />
                <span asp-validation-for="DonGiaThuoc1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiDiem" class="control-label">Thời điểm</label>
                <input asp-for="ThoiDiem" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model?.MaThuoc">Quay lại</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

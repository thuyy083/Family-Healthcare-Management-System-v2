@{
    ViewData["Title"] = "TrangChu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Sonny</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    <!-- Owl Carousel -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css" asp-append-version="true" />
    <!-- Nice Select -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/css/nice-select.min.css" />
    <!-- Datepicker -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
</head>

<body>
    <div class="hero_area">
        <!-- Header Section -->
        <header class="header_section">
            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container ">
                        <a class="navbar-brand" href="@Url.Action("TrangChu", "Home")">
                            <img src="~/images/logo/icon.png" alt="Logo" asp-append-version="true" />
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class=""> </span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <div class="d-flex mr-auto flex-column flex-lg-row align-items-center">
                                <ul class="navbar-nav">
                                    <li class="nav-item active">
                                        <a class="nav-link" href="@Url.Action("TrangChu", "Home")">Trang chủ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("GioiThieu", "Home")">Giới thiệu</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("DichVu", "Home")">Dịch vụ</a>
                                    </li>

                                </ul>
                            </div>
                            <div class="quote_btn-container">
                                <a href="@Url.Action("Login", "Account")">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    <span>Đăng nhập</span>
                                </a>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        <!-- End Header Section -->
        <!-- Slider Section -->
        <section class="slider_section">
            <div class="dot_design">
                <img src="~/images/logo/dots.png" alt="Dots" asp-append-version="true" />
            </div>
            <div id="customCarousel1" class="carousel slide" data-ride="carousel">
                <!-- Slider Content -->
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-box">
                                        <div class="play_btn">
                                            <button>
                                                <i class="fa fa-play" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                        <h1>
                                            Sonny <br>
                                            <span>Medical Clinic</span>
                                        </h1>
                                        <p>Chăm sóc sức khỏe, chăm sóc từ trái tim</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="img-box">
                                        <img src="~/images/logo/slider-img.jpg" alt="Slider Image" asp-append-version="true" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="container ">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-box">
                                        <div class="play_btn">
                                            <button>
                                                <i class="fa fa-play" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                        <h1>
                                            Sonny <br>
                                            <span>
                                                Medical Clinic
                                            </span>
                                        </h1>
                                        <p>
                                            Chăm sóc sức khỏe, chúng tôi không chỉ đặt sự chuyên nghiệp vào hàng đầu mà còn chăm sóc từ trái tim. Với sứ mệnh cao cả là nâng cao chất lượng cuộc sống và sức khỏe cho mỗi bệnh nhân, chúng tôi cam kết đồng hành, chia sẻ và tạo ra một môi trường chăm sóc ấm áp, tận tâm và an toàn. Ở đây, bạn không chỉ là một bệnh nhân, mà còn là một phần của gia đình chăm sóc y tế của chúng tôi.
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="img-box">
                                        <img src="~/images/logo/slider-img.jpg" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Navigation Buttons -->
                <div class="carousel_btn-box">
                    <a class="carousel-control-prev" href="#customCarousel1" role="button" data-slide="prev">
                        <img src="~/images/logo/prev.png" alt="Previous" asp-append-version="true" />
                    </a>
                    <a class="carousel-control-next" href="#customCarousel1" role="button" data-slide="next">
                        <img src="~/images/logo/next.png" alt="Next" asp-append-version="true" />
                    </a>
                </div>
            </div>
        </section>
        <!-- End Slider Section -->
    </div>

    <!-- about section -->

    <section class="about_section">
        <div class="container  ">
            <div class="row">
                <div class="col-md-6 ">
                    <div class="img-box">
                        <img src="~/images/logo/about-img.jpg" alt="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="detail-box">
                        <div class="heading_container">
                            <h2>
                                Giới thiệu về <span>phòng khám</span>
                            </h2>
                        </div>
                        <p>
                            Chào mừng bạn đến với Sonny - nơi nâng cao sức khỏe và chăm sóc bệnh nhân từng bước. Tại đây, chúng tôi cam kết đem đến cho mỗi bệnh nhân sự quan tâm và chăm sóc tận tâm nhất. Với đội ngũ y bác sĩ và nhân viên chuyên nghiệp, chúng tôi cung cấp các dịch vụ y tế đa dạng và toàn diện, từ chăm sóc cơ bản đến điều trị chuyên sâu, đảm bảo rằng mỗi bệnh nhân được đồng hành và hỗ trợ trên hành trình điều trị của mình. Hãy đến với chúng tôi và trải nghiệm sự chăm sóc y tế đích thực, từ trái tim của chúng tôi đến trái tim của bạn.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end about section -->
    <!-- info section -->
    <section class="info_section ">
        <div class="container">
            <div class="info_top">
                <div class="info_logo">
                    <a href="">
                        <img src="~/images/logo/icon.png" alt="Logo" asp-append-version="true" />
                    </a>
                </div>

            </div>
            <div class="info_bottom layout_padding2">
                <div class="row info_main_row">
                    <div class="col-md-6 col-lg-3">
                        <h5>
                            Địa chỉ
                        </h5>
                        <div class="info_contact">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>
                                    Location
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>
                                    Call +01 1234567890
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope"></i>
                                <span>
                                    demo@gmail.com
                                </span>
                            </a>
                        </div>
                        <div class="social_box">
                            <a href="">
                                <i class="fa fa-facebook" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-twitter" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-linkedin" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-instagram" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="info_links">
                            <h5>
                                LIÊN KẾT
                            </h5>
                            <div class="info_links_menu">
                                <a class="active" href="@Url.Action("TrangChu", "Home")">
                                    Trang chủ
                                </a>
                                <a href="@Url.Action("GioiThieu", "Home")">
                                    Giới thiệu
                                </a>
                                <a href="@Url.Action("Dịch vụ", "Home")">
                                    Dịch vụ
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="info_post">
                            <h5>
                                BÀI VIẾT MỚI NHẤT
                            </h5>
                            <div class="post_box">
                                <div class="img-box">
                                    <img src="~/images/logo/post1.jpg" alt="">
                                </div>
                                <p>
                                    Bí Quyết
                                    Nuôi Bệnh Hiệu Quả
                                </p>
                            </div>
                            <div class="post_box">
                                <div class="img-box">
                                    <img src="~/images/logo/post2.jpg" alt="">
                                </div>
                                <p>
                                    Nâng Cao Nhận Thức
                                    Về Nuôi Bệnh
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="info_post">
                            <h5>
                                TIN TỨC
                            </h5>
                            <div class="post_box">
                                <div class="img-box">
                                    <img src="~/images/logo/post3.jpg" alt="">
                                </div>
                                <p>
                                    Sự Kiện Tư Vấn:
                                    Nuôi Bệnh và Chăm Sóc Sức Khỏe
                                </p>
                            </div>
                            <div class="post_box">
                                <div class="img-box">
                                    <img src="~/images/logo/post4.png" alt="">
                                </div>
                                <p>
                                    Hành trình hồi phục
                                    của bệnh nhân tại phòng khám
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end info_section -->

    <!-- Footer Section -->
    <footer class="footer_section">
        <div class="container">
            <p>&copy; <span id="displayYear"></span> Phòng khám đa khoa Sonny</p>
        </div>
    </footer>
    <!-- Footer Scripts -->
    <script src="~/js/jquery-3.4.1.min.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.js" asp-append-version="true"></script>
    <script src="~/js/custom.js" asp-append-version="true"></script>
</body>

</html>

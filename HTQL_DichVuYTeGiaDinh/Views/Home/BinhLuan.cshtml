@model HTQL_DichVuYTeGiaDinh.ViewModels.ChiTietDichVuViewModel
@{
    ViewBag.Title = "Bình luận";

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />

    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">

    <!--owl slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />

    <!-- font awesome style -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <!-- nice select -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/css/nice-select.min.css" integrity="sha256-mLBIhmBvigTFWPSCtvdu6a76T+3Xyt+K571hupeFLg4=" crossorigin="anonymous" />
    <!-- datepicker -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css">
    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />

</head>
<body class="sub_page">

    <div class="hero_area">
        <!-- header section strats -->
        <header class="header_section">

            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container ">
                        <a class="navbar-brand" href="@Url.Action("TrangChu", "Home")">
                            <img src="~/images/logo/icon.png" alt="Logo" asp-append-version="true" />

                        </a>

                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class=""> </span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <div class="d-flex mr-auto flex-column flex-lg-row align-items-center">
                                <ul class="navbar-nav  ">
                                    <li class="nav-item ">
                                        <a class="nav-link" href="@Url.Action("TrangChu", "Home")">Trang chủ <span class="sr-only">(current)</span></a>
                                    </li>
                                    <li class="nav-item active">
                                        <a class="nav-link" href="@Url.Action("GioiThieu", "Home")"> Giới thiệu</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("DichVu", "Home")">Dịch vụ</a>
                                    </li>

                                </ul>
                            </div>
                            <div class="quote_btn-container">
                                <a href="@Url.Action("Login", "Account")">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    <span>
                                        Đăng nhập
                                    </span>
                                </a>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        <!-- end header section -->
    </div>

    <div class="container py-5">
        <!-- Thông tin dịch vụ -->
        <div class="mb-5">
            <h2 class="text-primary">@Model.TenDichVu</h2>
            <p><strong>Mô tả:</strong> @Model.MoTa</p>
            <p><strong>Đơn vị tính:</strong> @Model.DonViTinh</p>
            <p>
                <strong>Điểm đánh giá trung bình:</strong>
                <span class="text-warning">
                    @string.Format("{0:N1}", Model.DiemTrungBinh)
                    <i class="fas fa-star"></i>
                </span>
            </p>
        </div>

        <!-- Danh sách bình luận -->
        <h3 class="text-success mb-4">Bình luận</h3>
        @if (Model.BinhLuans.Any())
        {
            <div class="list-group">
                @foreach (var bl in Model.BinhLuans)
                {
                    <div class="list-group-item list-group-item-action mb-3">
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-1">@bl.TenNguoiBinhLuan</h5>
                            <small class="text-muted">@bl.ThoiDiemBinhLuan.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= bl.DiemDanhGia)
                                {
                                    <i class="fas fa-star text-warning"></i>
                                }
                                else
                                {
                                    <i class="far fa-star text-warning"></i>
                                }
                            }
                        </div>
                        <p class="mb-1">@bl.NoiDungBinhLuan</p>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center" role="alert">
                Chưa có bình luận nào cho dịch vụ này.
            </div>
        }
    </div>
    <!-- info section -->
    <section class="info_section ">
        <div class="container">
            <div class="info_top">
                <div class="info_logo">
                    <a href="">
                        <img src="~/images/logo/icon.png" alt="Logo" asp-append-version="true" />
                    </a>
                </div>

            </div>
            <div class="info_bottom layout_padding2">
                <div class="row info_main_row">
                    <div class="col-md-6 col-lg-3">
                        <h5>
                            Địa chỉ
                        </h5>
                        <div class="info_contact">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>
                                    Location
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>
                                    Call +01 1234567890
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope"></i>
                                <span>
                                    demo@gmail.com
                                </span>
                            </a>
                        </div>
                        <div class="social_box">
                            <a href="">
                                <i class="fa fa-facebook" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-twitter" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-linkedin" aria-hidden="true"></i>
                            </a>
                            <a href="">
                                <i class="fa fa-instagram" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="info_links">
                            <h5>
                                LIÊN KẾT
                            </h5>
                            <div class="info_links_menu">
                                <a class="active" href="@Url.Action("TrangChu", "Home")">
                                    Trang chủ
                                </a>
                                <a href="@Url.Action("GioiThieu", "Home")">
                                    Giới thiệu
                                </a>
                                <a href="@Url.Action("DichVu", "Home")">
                                    Dịch vụ
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="info_post">
                            <h5>
                                BÀI VIẾT MỚI NHẤT
                            </h5>
                            <div class="post_box">
                                <div class="img-box">
                                    <img src="~/images/logo/post1.jpg" alt="">
                                </div>
                                <p>
                                    Bí Quyết
                                    Nuôi Bệnh Hiệu Quả
                                </p>
                            </div>
                            <div class="post_box">
                                <div class="img-box">
                                    <img src="~/images/logo/post2.jpg" alt="">
                                </div>
                                <p>
                                    Nâng Cao Nhận Thức
                                    Về Nuôi Bệnh
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="info_post">
                            <h5>
                                TIN TỨC
                            </h5>
                            <div class="post_box">
                                <div class="img-box">
                                    <img src="~/images/logo/post3.jpg" alt="">
                                </div>
                                <p>
                                    Sự Kiện Tư Vấn:
                                    Nuôi Bệnh và Chăm Sóc Sức Khỏe
                                </p>
                            </div>
                            <div class="post_box">
                                <div class="img-box">
                                    <img src="~/images/logo/post4.png" alt="">
                                </div>
                                <p>
                                    Hành trình hồi phục
                                    của bệnh nhân tại phòng khám
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end info_section -->
    <!-- footer section -->
    <footer class="footer_section">
        <div class="container">
            <p>
                &copy; <span id="displayYear"></span> Phòng khám đa khoa Sonny

            </p>
        </div>
    </footer>

    <!-- footer section -->
    <!-- jQery -->
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/js/bootstrap.js"></script>
    <!-- nice select -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/js/jquery.nice-select.min.js" integrity="sha256-Zr3vByTlMGQhvMfgkQ5BtWRSKBGa2QlspKYJnkjZTmo=" crossorigin="anonymous"></script>
    <!-- owl slider -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <!-- datepicker -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
    <!-- custom js -->
    <script src="~/js/custom.js"></script>
    <!-- FontAwesome CDN -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>

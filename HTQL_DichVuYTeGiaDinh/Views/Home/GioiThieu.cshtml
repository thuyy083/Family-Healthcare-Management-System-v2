                            <a href="">
                                <i class="fa fa-instagram" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="info_links">
                            <h5>
                                LIÊN KẾT
                            </h5>
                            <div class="info_links_menu">
                                <a class="active" href="@Url.Action("TrangChu", "Home")">
                                    Trang chủ
                                </a>
                                <a href="@Url.Action("GioiThieu", "Home")">
                                    Giới thiệu
                                </a>
                                <a href="@Url.Action("DichVu", "Home")">
                                    Dịch vụ
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="info_post">
                            <h5>
                                BÀI VIẾT MỚI NHẤT
                            </h5>
                            <div class="post_box">
                                <div class="img-box">
                                    <img src="~/images/logo/post1.jpg" alt="">
                                </div>
                                <p>
                                    Bí Quyết
                                    Nuôi Bệnh Hiệu Quả
                                </p>
                            </div>
                            <div class="post_box">
                                <div class="img-box">
                                    <img src="~/images/logo/post2.jpg" alt="">
                                </div>
                                <p>
                                    Nâng Cao Nhận Thức
